<div class='card-body'>
  <%= form_with(model: todo_list, local: true) do |form| %>
    <% if todo_list.errors.any? %>
      <div id="error_explanation">
        <h5><%= pluralize(todo_list.errors.count, "error") %> prohibited this todo_list from being saved:</h5>

        <ul>
          <% todo_list.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class='input-group mt-2'>
      <%= form.text_field :title, class: 'form-control', placeholder: 'Add a title todo list'%>
      <div class='input-group-append'>
        <%= form.submit class: 'btn btn-primary input-group-btn' %>
      </div>
    </div>
  <% end %>
</div>
